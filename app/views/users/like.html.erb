<div class="main user-show">
  <div class="container">
   
    
    
    <% @likes.each do |like| %>
      <% post = Post.find_by(id: like.post_id) %>
      
      <div class="posts-index-item">
        
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(micropost.user.name, "/users/#{post.user.id}") %>
          </div>
          <%= link_to(micropost.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>